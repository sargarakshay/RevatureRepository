<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate-player</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Akshay@1710290</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <property name="hbm2ddl.auto">create</property>

        <!--
        you will be giving Model/POJO/ class entry also here
        other DB configuration like connection pool, cache memory etc can also be given here
        -->
        <mapping class="model.Player"/>

    </session-factory>
</hibernate-configuration>